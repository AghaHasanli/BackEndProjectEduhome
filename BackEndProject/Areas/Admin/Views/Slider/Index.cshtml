@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider</h4>
                <a asp-controller="Slider" asp-action="Create" class="btn btn-success">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Titel
                                </th>
                                <th>
                                    TitelBottom
                                </th>
                                <th>
                                    Description
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slider sld in Model)
                            {

                            <tr>
                                <td>
                                    <img src="~/img/slider/@sld.ImageUrl"/>
                                </td> 
                                <td>
                                    @sld.Titel
                                </td>
                                <td>
                                    @sld.TitelButton
                                </td>
                                <td>
                                    @sld.Description
                                </td>
                                <td>
                                    <a class="btn btn-success" asp-action="Detail" asp-route-id="@sld.Id">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@sld.Id">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@sld.Id">
                                        <i class="mdi mdi-delete-sweep"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

