@model Slider
@{
    ViewData["Title"] = "Delete";
}
<div class="col-12 mt-3">
    <img src="~/img/slider/@Model.ImageUrl" class="img-fluid" alt="Alternate Text" />
</div>
    <div class="col-12 mt-3">
        <div class="mt-3">
            Titel:@Model.Titel
        </div>
        <div class="mt-3">
            Titel:@Model.TitelButton
        </div>
        <div class="mt-3">
            Titel:@Model.Description
        </div>
    </div>
    <div>
        <div>
            <a asp-action="Index" class="my-3 btn btn-inverse-secondary">Go Back</a>
            <form method="post" class="text-center">
                <h4 class="text-danger text-center mb-3">Are you sure you want to delete this slider?</h4>
                <button type="submit" class=" btn btn-danger">Delete</button>
            </form>
        </div>
    </div>

