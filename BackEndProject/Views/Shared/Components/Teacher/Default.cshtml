@model List<Teacher>
@foreach (Teacher tc in Model)
{
    <div class="col-md-3 col-sm-4 col-xs-12">
        <div class="single-teacher mb-45">
            <div class="single-teacher-img">
                <a asp-controller="Teacher" asp-action="Detail" asp-route-id="@tc.Id"><img src="img/teacher/@tc.ImageUrl"  alt="teacher"></a>
            </div>
            <div class="single-teacher-content text-center">
                <h2><a  asp-controller="Teacher" asp-action="Detail" asp-route-id="@tc.Id">@tc.FullName</a></h2>
                <h4>@tc.Position</h4>
                <ul>
                    @foreach (TeacherSocial td in tc.TeacherSocials)
                    {
                        <li><a  href="@td.Social.Link"><i class="@td.Social.Icon"></i></a></li>

                    }
                </ul>
            </div>
        </div>
    </div>
}

